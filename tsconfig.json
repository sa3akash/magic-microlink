{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "baseUrl": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  